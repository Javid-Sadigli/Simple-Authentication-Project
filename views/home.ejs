<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <%- include('includes/navbar.ejs') %>

    <main>
       <% if (user) { %>
        <h1 class="welcome">
            Welcome, <%= user.username %>
        </h1>
        <p class="info">
            You have successfully registered and logged in. Congratulations! If you want, you can log out with the button below.
        </p>
        <a href="/logout" class="login">Log out</a>
       <% } else {%>
            <h1>
                Welcome, User.
            </h1>
            <p>
                You have not logged in. Please log in with the button below. 
            </p>
            <a href="/login" class="logout">Log in</a>
        <% } %>
    </main>
</body>
</html>